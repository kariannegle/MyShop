@model IEnumerable<Item> // view expects a collection of item objects

<h1>List og Shop Items (@ViewBag.CurrentViewName View)</h1> <!-- displays the title of the view, including a dynamic part -->
<a href="/Item/Table">Table View</a>

<!-- Grid layout -->
<div class="row row-cols-1 row-cols-md-3 g-4">
    @foreach (var item in Model)
    {
        <div class="col">
            <div>
                <img src="@item.ImageUrl" class="card-img-top" alt="@item.Name">
                <div>
                    <div class="d-flex justify-content-between mt-2">
                        <h5 class="text-start">
                            @item.Name
                        </h5>
                        <h5 class="text-nowrap">
                            @item.Price.ToString("0.00 NOK")
                        </h5>

                    </div>
                </div>
            </div>

        </div>
    }
    

</div>