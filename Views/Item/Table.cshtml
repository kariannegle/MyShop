@model IEnumerable<MyShop.Models.Item>

<h1>List og Shop Items (@ViewBag.CurrentViewName View)</h1> <!-- displays the title of the view, including a dynamic part -->
<a href="/Item/Grid">Table View</a>

        <div class="container">
            <h1>@ViewBag.CurrentViewName</h1>
            <table class='table table-striped'>
                <tr><th>Id</th><th>Name</th><th>Price</th><th>Description</th></tr>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.ItemId</td>
                        <td>@item.Name</td>
                        <td>@item.Price.ToString("0.00 NOK")</td>
                        <td>@item.Description</td>
                    </tr>
                }
            </table>
        </div>

    

